*
  box-size border-box
  padding 0
  margin 0
  font-size 16px
  font-family "Verdana", sans-serif
  input, button
    &:focus, &:active
      outline none
  
.center-text
	text-align center
 
a
  color black 
	
.flex
  display flex
  &.space-around
    justify-content space-around
  &.vertical-center
    align-items center
  &.content-right
    justify-content flex-end
  &.space-between
  	justify-content space-between
  &.direction-row
    flex-direction row  
  &.direction-column
    flex-direction column
  &.nowrap
    flex-wrap wrap
    
header
  background #fb3640

.navbar
  margin-bottom 0 !important

.display-panel
	height 275px

.addTournamentTitle
  width 100%
  border 0px
  color black
  outline none
  
.match-panel
  padding 60px 20px
  margin 2px
  margin-bottom 30px

.match-panel-date
  padding-top 20px
.team-names
  letter-spacing -.5