*
  box-size border-box
  padding 0
  margin 0
  font-size 16px
  font-family "Verdana", sans-serif
  
.center-text
	text-align center
	
.flex
  display flex
  &.space-around
    justify-content space-around
  &.vertical-center
    align-items center
  &.content-right
    justify-content flex-end
  &.space-between
  	justify-content space-between
  	
.display-panel
	height 400px