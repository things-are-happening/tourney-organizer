div.viewTournamentBody
	div(class='flex space-between container')
		ul(class='nav nav-tabs')
			li(class='bracketTab active')
				a(href='#round1' data-toggle='tab') Round 1
			li(class='bracketTab')
				a(href='#round2' data-toggle='tab') Round 2
			li(class='bracketTab')
				a(href='#round3' data-toggle='tab') Quarter Finals
			li(class='bracketTab')
				a(href='#round4' data-toggle='tab') Semi Finals
			li(class='bracketTab')
				a(href='#round5' data-toggle='tab') Finals

	//- Content for first tab, round one

	div(class='tab-content')			
		div(class='container-fluid view-body tab-pane active' id='round1' role='tabpanel')
			div(class='col-md-3 col-sm-6' ng-repeat='match in matches')
				a(data-toggle='modal' data-target='#testModal')
					div(class='match-panel')
						div(class='team-names')
							div(class='flex direction-row space-between')
								h4 {{match.teamOne}}:
								div(class='scorePosition')
									h4 {{match.teamOneScore}}
							div(class='flex direction-row space-between')
								h4 {{match.teamTwo}}:
								div
									h4 {{match.teamTwoScore}}
							div(class='flex space-around match-panel-date')
								{{match.date}}, {{match.time}}

		div(class='modal fade' id='testModal' tabindex='-1' role='dialog' aria-labelledby='myModalLabel')
			div(class='modal-dialog' role='document')
				div(class='modal-content')
					div(class='modal-header')
						button(type='button' class='close' data-dismiss='modal' aria-label='close')
							span(aria-hidden='true') &times;
					div(class='modal-body')
						p hello
					div(class='modal-footer')
						button(type='button' class='btn btn-default' data-dismiss='modal') Close

